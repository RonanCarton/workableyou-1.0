<%= simple_form_for(@wpost) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :wtopic_id %>
    <%= f.input :user_id %>
    <%= f.input :reply_to_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
