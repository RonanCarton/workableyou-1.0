      <%= f.label :days_cont, "Days" %>
</div>
    <div class="field">
      <%= f.label :industry_cont, "Industry" %>
      <%= f.text_field :industry_cont %>
    </div>
    <div class="field">
      <%= f.label :job_location_cont, "Location City" %>
      <%= f.text_field :job_location_cont %>
    </div>
