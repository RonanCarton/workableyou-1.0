<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :job_title %>
    <%= f.input :job_id %>
    <%= f.input :job_description %>
    <%= f.input :user_id %>
    <%= f.input :job_location %>
    <%= f.input :job_type %>
    <%= f.input :employer %>
    <%= f.input :employer_website %>
    <%= f.input :created_at %>
    <%= f.input :updated_at %>
    <%= f.input :how_to_apply %>
    <%= f.input :photo_url %>
    <%= f.input :industry %>
    <%= f.input :hours %>
    <%= f.input :days %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
